{
  "manifest_version": 3,
  "name": "Text Highlighter",
  "version": "1.0",
  "description": "A Chrome extension to highlight text on webpages.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["html2pdf.js","contents.js"],
      "css": ["style.css"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "commands": {
    "toggle_highlight": {
      "suggested_key": {
        "default": "Alt+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "To Highlight the selected text"
    },
    "clear_highlights": {
      "suggested_key": {
        "default": "Alt+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Delete selected highlight"
    }
  }
}
